<!DOCTYPE html>
<html>
  <head>
    <title>Shusher Pi</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <a href="/" class="animated rubberBand">Home</a> |
      <a href="/home">About Us</a> |
      <%= link_to "New Shusher", new_shusher_path %> |
      <%= link_to "List all Shushers", shushers_path %> |

      <% if user_signed_in? %>
        Hello <%= current_user.first_name %>,
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path %>
        <%= link_to "Sign in With Twitter", user_omniauth_authorize_path(provider: :twitter), class: "btn btn-info btn-sm" %>
        <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(provider: :facebook), class: "btn btn-primary btn-sm" %>
        <%= link_to "Sign in with Google", user_omniauth_authorize_path(provider: :google_oauth2), class: "btn btn-warning btn-sm" %>
        <%= link_to "Sign in with Github", user_omniauth_authorize_path(provider: :github), class: "btn btn-info btn-sm" %>
      <% end %>
      <hr>
      
      <!-- flash notice and alert for gem 'devise' usage -->
      <%#= flash[:notice] || flash[:alert] %>
      <% flash.each do |name, msg| %>
        <% if name=="notice" %>
          <%= content_tag :div, msg, class: "alert alert-info", role: "alert" %>
        <% elsif name=="alert" %>
          <%= content_tag :div, msg, class: "alert alert-warning", role: "alert" %>
        <% elsif name=="error" %>
          <%= content_tag :div, msg, class: "alert alert-danger", role: "alert" %>
        <% else %>
          <%= content_tag :div, msg, class: "alert alert-info", role: "alert" %>
        <% end %>
      <% end %>


      <%= yield %>


    </div>
  </body>
</html>
